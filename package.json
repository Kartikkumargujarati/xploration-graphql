{
  "name": "xploration-graphql",
  "version": "1.0.0",
  "description": "A federated GraphQL service that is a wrapper around the SpaceX REST API.",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "lint": "eslint . --ext .ts",
    "prettify": "prettier 'src/**/*.ts' --write",
    "start:dev": "concurrently -k npm:server:*",
    "server:gateway": "nodemon --exec ts-node src/gateway.ts",
    "server:company": "nodemon --exec ts-node src/company/index.ts",
    "start": "npm run build && node build/gateway.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run prettify",
      "npm run lint"
    ]
  },
  "repository": {
    "url": "https://github.com/Kartikkumargujarati/xploration-graphql"
  },
  "keywords": [],
  "author": "Kartik Kumar Gujarati",
  "license": "MIT",
  "homepage": "https://github.com/Kartikkumargujarati/xploration-graphql#readme",
  "dependencies": {
    "@apollo/federation": "^0.23.0",
    "@apollo/gateway": "^0.26.1",
    "apollo-server": "^2.23.0",
    "concurrently": "^6.0.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}